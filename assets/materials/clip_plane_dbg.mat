name: clip_plane_dbg.mat 

textures: 
  0: assets/textures/tango-128.ppm

pass:
  name: clip_plane_dbg.mat/pass0
  queue: 900 
  tags: [onscreen]
  cull: off
  blend:
    factors : 
      - src_alpha
      - one
    op      : add 
  vertex: | 
          #version 330 core
          
          layout(location = 0) in vec3 vertex_position;
          layout(location = 3) in vec2 vertex_uv;

          out VertexData {
            vec2 uv;
          } OUT;

          uniform mat4 SU_PVM_MATRIX;

          void main() {
            gl_Position = SU_PVM_MATRIX * vec4(vertex_position, 1); 
            OUT.uv = vertex_uv;
          }

  fragment: | 
          #version 330 core

          in VertexData {
            vec2 uv;
          } IN;

          uniform sampler2D TEXTURE_0; 

          out vec4 color;
          void main () {
            vec4 tex = texture(TEXTURE_0, IN.uv);
            color = vec4(tex.rgb, 0.5); 
          }

