name: lamp2 

pass:
  name: pass0 
  tags: [onscreen]
  cull: ccw 
  vertex: | 
          #version 330 core

          layout(location = 0) in vec3 IN_position;

          out InOut {
            vec3 pos; // model space position
          } OUT;

          uniform mat4 SU_P_MATRIX;
          uniform mat4 SU_V_MATRIX;
          uniform mat4 SU_M_MATRIX;

          void main() {
            mat4 pvm = SU_P_MATRIX * SU_V_MATRIX * SU_M_MATRIX;
            OUT.pos = IN_position;
            gl_Position = pvm * vec4(IN_position, 1); 
          }

  fragment: | 
          #version 330 core

          in InOut {
            vec3 pos;
          } IN;

          out vec4 OUT_color;

          const vec4 tint = vec4(0, 0, 1, 1);

          void main () {
            OUT_color = clamp(length(IN.pos), 0, 1) * tint * 2; 
          }

